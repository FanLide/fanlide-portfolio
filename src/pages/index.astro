---
import Layout from '../layouts/Layout.astro';
import { experience, projects, skills } from '../data/portfolio.ts';
---

<Layout title="Fan Lide - Full Stack Innovator">
  <main class="min-h-screen bg-[#0a0a0a] text-white selection:bg-purple-500 selection:text-white pb-20">
    
    <!-- Hero Section -->
    <section class="min-h-[80vh] flex flex-col items-center justify-center p-8 text-center relative overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-purple-900/20 via-[#0a0a0a] to-[#0a0a0a] -z-10"></div>
      
      <div class="space-y-6 animate-in fade-in zoom-in duration-1000 slide-in-from-bottom-10 fill-mode-both">
        <h1 class="text-5xl md:text-7xl font-bold tracking-tight bg-gradient-to-r from-white via-gray-200 to-gray-500 bg-clip-text text-transparent pb-2">
          Fan Lide
        </h1>
        <p class="text-xl md:text-2xl text-gray-400 font-light max-w-2xl mx-auto leading-relaxed">
          10+ Years Experience. Frontend Expert & Backend Capable. <br/>
          Bridging China & Japan tech ecosystems with precision.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4 pt-4">
          <a href="#projects" class="px-8 py-3 bg-white text-black font-medium rounded-full hover:bg-gray-200 transition-all">
            View Projects
          </a>
          <a href="#contact" class="px-8 py-3 border border-gray-700 text-gray-300 font-medium rounded-full hover:border-gray-500 hover:text-white transition-all">
            Contact Me
          </a>
        </div>
      </div>
    </section>

    <div class="max-w-5xl mx-auto px-6 space-y-32">
      
      <!-- Experience Section -->
      <section id="experience" class="scroll-mt-20">
        <h2 class="text-3xl font-bold mb-12 text-gray-100 border-l-4 border-purple-500 pl-4">Professional Journey</h2>
        <div class="space-y-12 border-l border-gray-800 ml-3 pl-8 relative">
          {experience.map((job) => (
            <div class="relative group">
              <span class="absolute -left-[41px] top-1 h-5 w-5 rounded-full border-4 border-[#0a0a0a] bg-gray-700 group-hover:bg-purple-500 transition-colors"></span>
              <div class="flex flex-col md:flex-row md:items-baseline justify-between mb-2">
                <h3 class="text-xl font-semibold text-white group-hover:text-purple-400 transition-colors">{job.role}</h3>
                <span class="text-sm font-mono text-gray-500">{job.period}</span>
              </div>
              <p class="text-gray-400 mb-2 font-medium">{job.company}</p>
              <p class="text-gray-500 leading-relaxed mb-4 text-sm md:text-base">{job.description}</p>
              <div class="flex flex-wrap gap-2">
                {job.tech.map((t) => (
                  <span class="px-2 py-1 bg-gray-900 border border-gray-800 text-xs text-gray-400 rounded-md">
                    {t}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- Projects Section -->
      <section id="projects" class="scroll-mt-20">
        <h2 class="text-3xl font-bold mb-12 text-gray-100 border-l-4 border-blue-500 pl-4">Featured Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {projects.map((project) => (
            <a href={project.link} target="_blank" class="group block p-6 bg-gray-900/50 border border-gray-800 rounded-2xl hover:border-blue-500/50 transition-all hover:-translate-y-1">
              <div class="flex justify-between items-start mb-4">
                <h3 class="text-lg font-bold text-white group-hover:text-blue-400 transition-colors">{project.title}</h3>
                <span class="text-xs font-mono px-2 py-1 rounded bg-gray-800 text-gray-400">{project.status}</span>
              </div>
              <p class="text-gray-400 text-sm mb-6 h-12 line-clamp-2">{project.description}</p>
              <div class="flex flex-wrap gap-2 mt-auto">
                {project.tech.slice(0, 3).map((t) => (
                  <span class="text-xs text-gray-500 group-hover:text-gray-300 transition-colors">#{t}</span>
                ))}
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Skills Section -->
      <section id="skills">
        <h2 class="text-3xl font-bold mb-12 text-gray-100 border-l-4 border-green-500 pl-4">Technical Arsenal</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          
          <div class="p-6 bg-gray-900/30 rounded-xl border border-gray-800">
            <h3 class="text-lg font-semibold text-green-400 mb-4">Frontend</h3>
            <div class="flex flex-wrap gap-2">
              {skills.frontend.map(skill => (
                <span class="px-3 py-1 bg-gray-900 text-sm text-gray-300 rounded-full border border-gray-700">{skill}</span>
              ))}
            </div>
          </div>

          <div class="p-6 bg-gray-900/30 rounded-xl border border-gray-800">
            <h3 class="text-lg font-semibold text-blue-400 mb-4">Backend</h3>
            <div class="flex flex-wrap gap-2">
              {skills.backend.map(skill => (
                <span class="px-3 py-1 bg-gray-900 text-sm text-gray-300 rounded-full border border-gray-700">{skill}</span>
              ))}
            </div>
          </div>

          <div class="p-6 bg-gray-900/30 rounded-xl border border-gray-800">
            <h3 class="text-lg font-semibold text-orange-400 mb-4">Tools & Cloud</h3>
            <div class="flex flex-wrap gap-2">
              {skills.tools.map(skill => (
                <span class="px-3 py-1 bg-gray-900 text-sm text-gray-300 rounded-full border border-gray-700">{skill}</span>
              ))}
            </div>
          </div>

        </div>
      </section>

      <!-- Contact / Footer -->
      <footer id="contact" class="pt-20 border-t border-gray-900 text-center">
        <h2 class="text-2xl font-bold text-white mb-6">Let's Create Something Amazing</h2>
        <div class="flex justify-center gap-8 mb-12">
          <a href="mailto:lidefan13@gmail.com" class="text-gray-400 hover:text-white transition-colors text-lg">Email</a>
          <a href="https://github.com/FanLide" target="_blank" class="text-gray-400 hover:text-white transition-colors text-lg">GitHub</a>
          <a href="https://t.me/lidefan13" target="_blank" class="text-gray-400 hover:text-white transition-colors text-lg">Telegram</a>
        </div>
        <p class="text-gray-600 text-sm">
          &copy; {new Date().getFullYear()} Fan Lide. Built with Astro & Tailwind. <br/>
          Based in Yokohama, Japan.
        </p>
      </footer>

    </div>
  </main>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>