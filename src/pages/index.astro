---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Fan Lide - Frontend Engineer">
  <main class="min-h-screen bg-[#0a0a0a] text-white flex flex-col items-center justify-center p-8 selection:bg-purple-500 selection:text-white">
    
    <div class="max-w-2xl w-full space-y-12 animate-in fade-in zoom-in duration-700">
      
      <!-- Hero Section -->
      <section class="space-y-4">
        <h1 class="text-5xl font-bold tracking-tight bg-gradient-to-r from-white to-gray-500 bg-clip-text text-transparent">
          Fan Lide
        </h1>
        <p class="text-xl text-gray-400 font-light leading-relaxed">
          Frontend Engineer & Full Stack Innovator based in Tokyo. <br/>
          Crafting digital experiences with precision and soul.
        </p>
      </section>

      <!-- Tech Stack (Minimal) -->
      <section class="flex flex-wrap gap-3 text-sm font-mono text-gray-500">
        <span class="px-3 py-1 border border-gray-800 rounded-full hover:border-gray-600 transition-colors cursor-default">React</span>
        <span class="px-3 py-1 border border-gray-800 rounded-full hover:border-gray-600 transition-colors cursor-default">Vue 3</span>
        <span class="px-3 py-1 border border-gray-800 rounded-full hover:border-gray-600 transition-colors cursor-default">TypeScript</span>
        <span class="px-3 py-1 border border-gray-800 rounded-full hover:border-gray-600 transition-colors cursor-default">Node.js</span>
        <span class="px-3 py-1 border border-gray-800 rounded-full hover:border-gray-600 transition-colors cursor-default">Astro</span>
      </section>

      <!-- Projects Link (Placeholder for now) -->
      <section>
        <div class="group relative inline-flex">
          <div class="absolute transition-all duration-1000 opacity-70 -inset-px bg-gradient-to-r from-[#44BCFF] via-[#FF44EC] to-[#FF675E] rounded-xl blur-lg group-hover:opacity-100 group-hover:-inset-1 group-hover:duration-200 animate-tilt"></div>
          <a href="https://github.com/FanLide" target="_blank" class="relative inline-flex items-center justify-center px-8 py-3 text-lg font-bold text-white transition-all duration-200 bg-gray-900 font-pj rounded-xl focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900" role="button">
            Check GitHub
          </a>
        </div>
      </section>

      <!-- Contact -->
      <footer class="pt-12 border-t border-gray-900">
        <div class="flex gap-6 text-gray-500 hover:text-gray-300 transition-colors">
          <a href="mailto:lidefan13@gmail.com" class="hover:text-white transition-colors">Email</a>
          <a href="https://twitter.com/lidefan13" target="_blank" class="hover:text-white transition-colors">Twitter</a>
          <a href="https://t.me/lidefan13" target="_blank" class="hover:text-white transition-colors">Telegram</a>
        </div>
      </footer>

    </div>
  </main>
</Layout>

<style>
  /* Custom Scrollbar for a cleaner look */
  ::-webkit-scrollbar {
    width: 8px;
  }
  ::-webkit-scrollbar-track {
    background: #0a0a0a; 
  }
  ::-webkit-scrollbar-thumb {
    background: #333; 
    border-radius: 4px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #555; 
  }
</style>